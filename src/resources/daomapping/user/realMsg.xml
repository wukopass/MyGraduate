<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rtworld.dao.user.IRealMsgDao">
    <select id="selectRealMsgById" resultType="realMsg" parameterType="int">
        select id,realName,identity,frontCardImg,backCardImg,handCardImg,isCertify,isChecking,createTime,
        updateTime,createRtUser,updateRtUser,isEffective
        from realmsg where id = #{id} and isEffective = 0
    </select>

    <insert id="insertRealMsg" parameterType="realMsg">
        insert into realmsg(id,realName,identity,frontCardImg,backCardImg,handCardImg,isCertify,isChecking,createTime,
        updateTime,createRtUser,updateRtUser,isEffective) values(#{id},#{realName},#{identity},#{frontCardImg},#{backCardImg},#{handCardImg},#{isCertify},#{isChecking},#{createTime},
        #{updateTime},#{createRtUser},#{updateRtUser},#{isEffective})
    </insert>
    <update id="updateState" parameterType="realMsg">
        update realmsg set isChecking = #{isChecking} where id=#{id}
    </update>
    <update id="getOutMsg" parameterType="realMsg">
        update realmsg set realname=null ,isChecking = #{isChecking} ,iscertify=0,identity =null,frontCardImg=null ,backCardImg=null ,handCardImg=null where id=#{id}
    </update>
    <delete id="deleteOneById" parameterType="int">
        delete from realmsg where id = #{id}
    </delete>
    <insert id="addMsg">
        insert into realmsg(realname) values (null)
    </insert>

</mapper>