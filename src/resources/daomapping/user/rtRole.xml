<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rtworld.dao.user.IRtRoleDao">
    <select id="getRoles" resultType="rtRole">
        select * from rtrole
    </select>
    <select id="getRole" resultType="rtRole" parameterType="int">
        select tr.* from rtrole as tr left join rtuserrole as tu on tr.id=tu.roleId where tu.userId = #{id}
    </select>
    <delete id="deleteOneById" parameterType="int">
        delete rtuserrole where userid = #{id}
    </delete>
</mapper>