<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rtworld.dao.util.IUserAndTypeDao">
    <insert id="insertUserAndType" parameterType="userAndType">
        insert into userandtype(id,choosetype,messagetype,typeid) values(#{id},#{chooseType},#{messageType},#{typeId});
    </insert>

    <delete id="deleteUserAndTypeById" parameterType="userAndType">
        delete from userandtype where id = #{id} and choosetype = #{chooseType}
    </delete>

    <select id="selectAllTypeIdByType" parameterType="userAndType" resultType="userAndType">
        select typeid from userandtype where id = #{id} and choosetype = #{chooseType} and messagetype = #{messageType}
    </select>
</mapper>