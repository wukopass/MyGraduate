<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rtworld.dao.tutor.ITutorDao">
    <insert id="insertTutor" parameterType="tutor">
        insert into tutor(name,company,job,introduction,experience,signature,charge)
         values(#{name},#{company},#{job},#{introduction},#{experience},#{signature},
         #{charge});
    </insert>

    <select id="searchTutor" resultType="tutor">
        select id,name,company,job,introduction,experience,signature,charge,photo from tutor
    </select>

    <select id="selectCaseById" resultType="successCase" parameterType="int">
        select introduction,trademark from successcase where id = #{id}
    </select>

    <select id="selectFieldById" resultType="string" parameterType="int">
        select g.name from goodfield g where g.id in(
        select fieldid from tutorfield where tutorid = #{id})
    </select>

    <select id="selectOneTutor" resultType="tutor" parameterType="int">
        select id,name,company,job,introduction,experience,signature,charge,photo
         from tutor where id = #{id}
    </select>

    <select id="selectStageById" resultType="string" parameterType="int">
        select p.name from projectstage p where p.id in(
        select stageid from tutorstage where tutorid = #{id})
    </select>
</mapper>